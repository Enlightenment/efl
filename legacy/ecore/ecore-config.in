#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no

usage() {
      echo "Usage: ecore-config [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--libs] [--cflags]" 1>&2
      echo "                    [--libs-con] [--libs-config] [--libs-dbus] [--libs-evas] [--libs-fb]" 1>&2
      echo "                    [--libs-file] [--libs-ipc] [--libs-job] [--libs-txt] [--libs-x]" 1>&2
}

if test $# -eq 0; then
      usage
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo @VERSION@
      ;;
    --cflags)
      if test @includedir@ != /usr/include ; then
        includes="-I@includedir@"
      fi
      echo $includes @EVAS_CFLAGS@
      ;;
    --libs)
      libdirs=-L@libdir@
      echo $libdirs -lecore @ecore_job_libs@ @ecore_x_libs@ @ecore_evas_libs@ @ecore_con_libs@ @ecore_ipc_libs@ @ecore_txt_libs@ @ecore_fb_libs@ @ecore_config_libs@ @ecore_file_libs@ @ecore_dbus_libs@ @EET_LIBS@ -lm
      ;;
    --libs-con)
      libdirs=-L@libdir@
      echo $libdirs -lecore @ecore_con_libs@ -lm
      ;;
    --libs-config)
      libdirs=-L@libdir@
      echo $libdirs -lecore @ecore_config_libs@ @EET_LIBS@ -lm
      ;;
    --libs-dbus)
      libdirs=-L@libdir@
      echo $libdirs -lecore @ecore_dbus_libs@ -lm
      ;;
    --libs-evas)
      libdirs=-L@libdir@
      echo $libdirs -lecore @ecore_evas_libs@ -lm
      ;;
    --libs-fb)
      libdirs=-L@libdir@
      echo $libdirs -lecore @ecore_fb_libs@ -lm
      ;;
    --libs-file)
      libdirs=-L@libdir@
      echo $libdirs -lecore @ecore_file_libs@ -lm
      ;;
    --libs-ipc)
      libdirs=-L@libdir@
      echo $libdirs -lecore @ecore_ipc_libs@ -lm
      ;;
    --libs-job)
      libdirs=-L@libdir@
      echo $libdirs -lecore @ecore_job_libs@ -lm
      ;;
    --libs-txt)
      libdirs=-L@libdir@
      echo $libdirs -lecore @ecore_txt_libs@ -lm
      ;;
    --libs-x)
      libdirs=-L@libdir@
      echo $libdirs -lecore @ecore_x_libs@ -lm
      ;;
    *)
      usage
      exit 1
      ;;
  esac
  shift
done

exit 0
