               state: "default" 0.0;
               rel1.relative: 0.3 0.2;
               rel2.relative: 0.7 0.25;
               color: 192 50 50 255;
            }
            description {
               state: "over" 0.0;
               inherit: "default" 0.0;
               color: 142 30 30 255;
            }
            description {
               state: "pressed" 0.0;
               inherit: "default" 0.0;
               color: 220 70 70 255;
            }
         }

         part {
            name: "focus_bt,label";
