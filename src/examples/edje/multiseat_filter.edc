   group {
      name: "example/selection";

      parts {
         part {
            name: "selection";
            type: RECT;
            mouse_events: 0;
            description {
               state: "default" 0.0;
               color: 180 180 180 255;
            }
         }
      }
   }

   group {
      name: "example/cursor";
      min: 1 0;

      parts {
         part {
            name: "cursor";
            type: RECT;
            mouse_events: 0;
            description {
               state: "default" 0.0;
               min: 2 12;
               color: 0 0 0 255;
            }
            description {
               state: "hidden" 0.0;
               inherit: "default" 0.0;
               color: 0 0 0 0;
            }
         }
      }

      programs {
         program {
            name: "cursor_hide";
            signal: "load";
            source: "";
            action: STATE_SET "hidden" 0.0;
            target: "cursor";
            transition: SINUSOIDAL 0.2;
            after: "cursor_hide_timer";
         }
         program {
            name: "cursor_hide_timer";
            in: 0.2 0.0;
            after: "cursor_show";
         }
         program {
            name: "cursor_show";
            action: STATE_SET "default" 0.0;
            target: "cursor";
            after: "cursor_show_timer";
         }
         program {
            name: "cursor_show_timer";
            in: 0.5 0.0;
            after: "cursor_hide";
         }
      }
   }
}
