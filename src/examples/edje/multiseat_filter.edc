            entry_mode: EDITABLE;
            select_mode: DEFAULT;
            cursor_mode: UNDER;
            mouse_events: 1;
            allowed_seats: "seat1";
            multiline: 1;
            source: "example/selection";
            source4: "example/cursor";
            description {
               state: "default" 0.0;
               min: 12 50;
               rel1 {
                  to: "widget,bg_text,1";
                  offset: 2 2;
               }
               rel2 {
                  to: "widget,bg_text,1";
                  offset: -3 -3;
               }
               text {
                  style: "entry_style";
                  min: 0 1;
                  align: 0.0 0.0;
               }
            }
