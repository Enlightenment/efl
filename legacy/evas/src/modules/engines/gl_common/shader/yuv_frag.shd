uniform sampler2D tex, texu, texv;
varying vec4 col;
varying vec2 tex_c;
varying vec2 tex_c2;
varying vec2 tex_c3;
void main()
{
   float r, g, b, y, u, v;
   y = texture2D(tex, tex_c.xy).r;
   u = texture2D(texu, tex_c2.xy).r;
   v = texture2D(texv, tex_c3.xy).r;
   y = (y - 0.0625) * 1.164;
   u = u - 0.5;
   v = v - 0.5;
   r = y + (1.402   * v);
   g = y - (0.34414 * u) - (0.71414 * v);
   b = y + (1.772   * u);
   gl_FragColor = vec4(r, g, b, 1.0) * col;
}
